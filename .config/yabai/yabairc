yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m space 1 --label browser
yabai -m space 2 --label dev
yabai -m space 3 --label socials
yabai -m space 4 --label misc
yabai -m space 5 --label docs
yabai -m space 6 --label daemon

#general space rules
yabai -m config layout bsp
yabai -m config top_padding 16
yabai -m config left_padding 16
yabai -m config right_padding 16
yabai -m config bottom_padding 16
yabai -m config window_gap 10
yabai -m config external_bar main:32:0
yabai -m config window_border off
yabai -m config active_window_border_color 0xFFEA6963
yabai -m config window_border_width 1 
yabai -m config window_animation_duration 0.0
yabai -m config window_shadow off

yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="Terminal" manage=off
yabai -m rule --add app="^Digital Colou?r Meter$" manage=off
yabai -m rule --add title="^Picture in Picture$" manage=off mouse_follows_focus=off

yabai -m config debug_output on
